<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Acme.BookStore.MauiClient.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="20"
            Padding="20"
            VerticalOptions="Center">

            <Label
                Text="Welcome to the BookStore App!"
                FontSize="22"
                HorizontalOptions="Center" />

            <Label
                x:Name="UserInfoLabel"
                Text="You are logged in."
                FontSize="16"
                HorizontalOptions="Center" />

            <Button
                Text="View Users (Test)"
                Clicked="OnViewUsersClicked"
                HorizontalOptions="Center" />

            <Button
                x:Name="LogoutButton"
                Text="Logout"
                Clicked="OnLogoutClicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
